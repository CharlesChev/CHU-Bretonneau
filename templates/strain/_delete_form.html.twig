<form method="post" action="{{ path('strain_delete', {'id': strain.id}) }}" onsubmit="return confirm('Confirmez-vous la suppression ?');">
    <input type="hidden" name="_method" value="Supprimer">
    <input type="hidden" name="_token" value="{{ csrf_token('Supprimer' ~ strain.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
